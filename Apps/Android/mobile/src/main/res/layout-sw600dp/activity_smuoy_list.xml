<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:divider="?android:attr/dividerHorizontal"
                android:orientation="horizontal"
                android:showDividers="middle"
                tools:context=".SmuoyListActivity">

    <!--
    This layout is a two-pane layout for the Smuoys
    master/detail flow.
    -->

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/primary"/>

    <fragment
            android:id="@+id/smuoy_list"
            android:name="ch.bfh.mobicomp.smuoy.SmuoyListFragment"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/toolbar"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            tools:layout="@android:layout/list_content"/>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/smuoy_list"
            android:layout_toEndOf="@+id/smuoy_list"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

        <FrameLayout
                android:id="@+id/smuoy_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </ScrollView>

</RelativeLayout>
